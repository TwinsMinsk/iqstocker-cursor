{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "bot",
      "deploy": {
        "startCommand": "python scripts/deployment/start_bot.py",
        "replicas": 1,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3,
        "environment": {
          "SERVICE_TYPE": "bot"
        }
      }
    },
    {
      "name": "web",
      "deploy": {
        "startCommand": "python scripts/deployment/start_web.py",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 300,
        "environment": {
          "SERVICE_TYPE": "admin"
        }
      }
    },
    {
      "name": "worker",
      "deploy": {
        "startCommand": "python scripts/deployment/start_worker.py",
        "environment": {
          "SERVICE_TYPE": "worker"
        }
      }
    }
  ]
}