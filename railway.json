{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "iqstocker-bot",
      "deploy": {
        "startCommand": "python -m bot.main",
        "environment": {
          "SERVICE_TYPE": "bot"
        }
      }
    },
    {
      "name": "admin-panel",
      "deploy": {
        "startCommand": "python run_admin_fastapi.py",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 300,
        "environment": {
          "SERVICE_TYPE": "admin"
        }
      }
    },
    {
      "name": "worker",
      "deploy": {
          "startCommand": "dramatiq worker --path .",
          "environment": {
              "SERVICE_TYPE": "worker"
          }
      }
    }
  ]
}