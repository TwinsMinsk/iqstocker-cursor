# Production Environment Variables Template

# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_PATH=/webhook

# Database Configuration (PostgreSQL for production)
DATABASE_URL=postgresql://username:password@host:port/database_name
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
DB_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://username:password@host:port/database_number
REDIS_CACHE_TTL=2592000

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_RATE_LIMIT_PER_MINUTE=60
AI_RATE_LIMIT_PER_HOUR=1000
AI_RATE_LIMIT_PER_DAY=10000

# Admin Panel Configuration
ADMIN_SECRET_KEY=your_very_secure_secret_key_here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here
ADMIN_SESSION_TIMEOUT=3600

# Payment Configuration (Boosty)
BOOSTY_API_KEY=your_boosty_api_key
BOOSTY_CLIENT_ID=your_boosty_client_id
BOOSTY_CLIENT_SECRET=your_boosty_client_secret
BOOSTY_WEBHOOK_SECRET=your_boosty_webhook_secret

# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
MAX_FILE_SIZE=10485760
UPLOAD_FOLDER=uploads

# Subscription Settings
TEST_PRO_DURATION_DAYS=14
PRO_DISCOUNT_PERCENT=50
FREE_DISCOUNT_PERCENT=30

# Limits per subscription
FREE_ANALYTICS_LIMIT=0
FREE_THEMES_LIMIT=1
TEST_PRO_ANALYTICS_LIMIT=1
TEST_PRO_THEMES_LIMIT=5
PRO_ANALYTICS_LIMIT=2
PRO_THEMES_LIMIT=5
PRO_TOP_THEMES_LIMIT=5
ULTRA_ANALYTICS_LIMIT=4
ULTRA_THEMES_LIMIT=10
ULTRA_TOP_THEMES_LIMIT=10

# AI Analysis Settings
NEW_WORKS_MONTHS=3
ADOBE_STOCK_RATE_LIMIT=10

# Security Settings
IP_WHITELIST_ENABLED=true
IP_WHITELIST_ADDRESSES=your.admin.ip.address,another.admin.ip.address

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
